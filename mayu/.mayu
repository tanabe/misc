include "109.mayu" # 109 キーボード設定

keymap Global

# CapsLock と 左Ctrl 入れ替え
mod control += 英数
key *英数	= *LControl

# Explorer を Vi キーバインドで移動
window  ExplorerList /EXPLORER.*:SHELLDLL_DefView:.*SysListView32$/ : Global
 key C-H = ←
 key C-J = ↓
 key C-K = ↑
 key C-L = →
 key C-O = Apps

window  ExplorerTree /EXPLORER.*:BaseBar:.*SysTreeView32$/ : Global
 key C-H = ←
 key C-J = ↓
 key C-K = ↑
 key C-L = →
 key C-O = Apps
